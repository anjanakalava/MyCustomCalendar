        <TextView android:textStyle="bold" android:gravity="center" android:background="@android:color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4.0dip" android:text="Mon" android:layout_weight="1.0" />
        <TextView android:textStyle="bold" android:gravity="center" android:background="@android:color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4.0dip" android:text="Tue" android:layout_weight="1.0" />
        <TextView android:textStyle="bold" android:gravity="center" android:background="@android:color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4.0dip" android:text="Wed" android:layout_weight="1.0" />
