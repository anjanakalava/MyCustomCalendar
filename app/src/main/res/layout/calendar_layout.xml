        <TextView android:textStyle="bold" android:gravity="center" android:background="@android:color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4.0dip" android:text="Sat" android:layout_weight="1.0" />
    </LinearLayout>
    <GridView
        android:id="@+id/gridview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:numColumns="7" />
</LinearLayout>